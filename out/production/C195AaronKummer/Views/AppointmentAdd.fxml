<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="400" prefHeight="350" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AppointmentAddController">

   <children>
      <Label layoutX="10" layoutY="5" fx:id="AddUpdateLabel" text="">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
      </Label>
      <GridPane layoutY="40" layoutX="10">
         <children>
            <Label fx:id="AppointmentCustomerLabel" text="Customer">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="AppointmentTitleLabel" text="Title" GridPane.rowIndex="1">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="AppointmentDescriptionLabel" text="Description" GridPane.rowIndex="2">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="AppointmentContactLabel" text="Contact" GridPane.rowIndex="4">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="AppointmentTypeLabel" text="Type" GridPane.rowIndex="3">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="AppointmentDateLabel" text="Date" GridPane.rowIndex="6">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="AppointmentLocationLabel" text="Location" GridPane.rowIndex="5">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="AppointmentTitleTextField"  GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="AppointmentDescriptionTextField"  GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="AppointmentTypeTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <DatePicker fx:id="AppointmentDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Label fx:id="AppointmentStartTimeLabel" text="Start Time" GridPane.rowIndex="7">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="AppointmentEndTimeLabel" text="End Time" GridPane.rowIndex="8">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <ComboBox fx:id="AppointmentContactComboBox" prefHeight="26.0" prefWidth="210" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="AppointmentLocationComboBox" prefHeight="26.0" prefWidth="210" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <TextField fx:id="AppointmentStartTextField" prefHeight="26.0" prefWidth="210" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <TextField fx:id="AppointmentEndTextField" prefHeight="26.0" prefWidth="210" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            <ComboBox fx:id="AppointmentCustomerComboBox" GridPane.columnIndex="1" />
         </children>
      </GridPane>
      <ButtonBar layoutY="300">
        <buttons>
         <Button fx:id="AppointmentBackButton" mnemonicParsing="false" onAction="#Back" prefHeight="26.0" prefWidth="90.0" text="Back" />
         <Button fx:id="Cancel" mnemonicParsing="false" onAction="#Cancel" text="Cancel" />
         <Button fx:id="Save" mnemonicParsing="false" onAction="#Save" text="Save" />
        </buttons>
      </ButtonBar>


   </children>
</AnchorPane>
