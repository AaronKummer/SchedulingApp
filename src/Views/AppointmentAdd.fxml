                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>

                <Label GridPane.columnIndex="0" text="User" GridPane.rowIndex="1"/>
                <Label GridPane.columnIndex="0" text="Customer" GridPane.rowIndex="2"/>
                <Label GridPane.columnIndex="0" text="Title" GridPane.rowIndex="3"/>
                <Label GridPane.columnIndex="0" text="Description" GridPane.rowIndex="4"/>
                <Label GridPane.columnIndex="0" text="Contact" GridPane.rowIndex="5"/>
                <Label GridPane.columnIndex="0" text="Type" GridPane.rowIndex="6"/>
                <Label GridPane.columnIndex="0" text="Location" GridPane.rowIndex="7"/>
                <Label GridPane.columnIndex="0" text="Date" GridPane.rowIndex="8"/>
                <Label GridPane.columnIndex="0" text="Start Time" GridPane.rowIndex="9"/>
