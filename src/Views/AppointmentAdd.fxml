                <ComboBox fx:id="AppointmentUserComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <ComboBox fx:id="AppointmentCustomerComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField fx:id="AppointmentTitleTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <TextField fx:id="AppointmentDescriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <ComboBox fx:id="AppointmentContactComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <TextField fx:id="AppointmentTypeTextField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <ComboBox fx:id="AppointmentLocationComboBox" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                <DatePicker fx:id="AppointmentDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                <TextField fx:id="AppointmentStartTextField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
                <TextField fx:id="AppointmentEndTextField" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

            </children>

        </GridPane>


        <ButtonBar layoutX="100" layoutY="560">
            <buttons>
                <Button fx:id="AppointmentBackButton" mnemonicParsing="false" onAction="#Back" prefHeight="26.0"
                        prefWidth="90.0" text="Back"/>
                <Button fx:id="Cancel" mnemonicParsing="false" onAction="#Cancel" text="Cancel"/>
                <Button fx:id="Save" mnemonicParsing="false" onAction="#Save" text="Save"/>
            </buttons>
        </ButtonBar>


    </children>
