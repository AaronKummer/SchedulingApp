    <children>
    <Label layoutX="200.0" layoutY="50" fx:id="AddUpdateLabel" text="">
        <font>
            <Font name="System Bold Italic" size="22.0"/>
        </font>
    </Label>

        <GridPane layoutX="200.0" layoutY="100" prefHeight="386.0" prefWidth="381.0">
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
